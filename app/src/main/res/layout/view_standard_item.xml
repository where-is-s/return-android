<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backgroundLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bkgrd_edit"
    tools:context=".activity.EntityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <re.returnapp.view.TypeView
            android:id="@+id/typeView"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:src="@drawable/ic_people"
            android:tint="@color/type"
            />

        <TextView
            android:id="@+id/headerText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/normal_text"
            android:text="Аня Шихова"
            android:textSize="14sp"
            android:paddingVertical="9dp"
            />

        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_session"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/sessionTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                tools:text = "4 (45 мин)"
                android:textColor="@color/normal_text"
                android:textSize="12sp"
                android:alpha="0.8"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/actionLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:visibility="gone">

            <ImageView
                android:id="@+id/searchButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bkgrd_edit_dark"
                android:src="@drawable/ic_search"
                android:padding="8dp"
                android:tint="@color/button_bright"
                android:layout_marginEnd="4dp"
                />

            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bkgrd_edit_dark"
                android:src="@drawable/ic_delete"
                android:padding="8dp"
                android:tint="@color/button_bright"
                android:layout_marginEnd="4dp"
                />

            <ImageView
                android:id="@+id/editButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bkgrd_edit_dark"
                android:src="@drawable/ic_edit"
                android:padding="8dp"
                android:tint="@color/button_bright"
                />

        </LinearLayout>

    </LinearLayout>

    <re.returnapp.mention.MentionTextView
        android:id="@+id/descriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text"
        android:maxLines="2"
        android:paddingHorizontal="12dp"
        android:paddingBottom="12dp"
        android:includeFontPadding="true"
        android:lineSpacingExtra="2dp"
        android:text="Девченка из 163 школы, которую я толком не знал. С ней познакомился Вова случайно в лесу, потом мы ходили к ней на день рождения."
        android:textSize="13sp"
        app:roundedTextHorizontalPadding="0dp"
        app:roundedTextVerticalPadding="1dp"
        />

</LinearLayout>